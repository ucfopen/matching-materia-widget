{
  "extends": "eslint:recommended",
  "globals": {
    "console": false,
    "angular": true,
    "document": false,
    "event": false,
    "$": false,
    "_": false,
    "window": false,
    "Namespace": true,
    "Materia": true,
    "Audio": false
  },
  "rules": {
    "no-empty": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "curly": "error",
    "no-empty-function": "error",
    "no-magic-numbers": ["warn",
      {
        "ignoreArrayIndexes": true
      }
    ],
    "no-multi-spaces": ["error",
      {
        "exceptions":
        {
          "ImportDeclaration":  true,
          "Property":           true,
          "VariableDeclarator": true
        }
      }
    ],
    "no-use-before-define": "error",
    "brace-style": "error"
  }
}